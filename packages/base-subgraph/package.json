{
  "name": "base-subgraph",
  "version": "1.1.1",
  "license": "UNLICENSED",
  "scripts": {
    "clean": "rm -rf ./generated ./build subgraph.yaml",
    "clean-all": "rm -rf ./node_modules ./generated ./build subgraph.yaml",
    "local-node": "docker-compose up",
    "codegen": "graph codegen",
    "build": "graph build",
    "prepare": "mustache config/base.json subgraph.yaml.mustache > subgraph.yaml",
    "prepare:base": "mustache config/base.json subgraph.yaml.mustache > subgraph.yaml",
    "prepare:base-sepolia": "mustache config/base-sepolia.json subgraph.yaml.mustache > subgraph.yaml",
    "deploy:base": "pnpm clean && pnpm prepare:base && pnpm codegen && graph build && goldsky subgraph deploy gnars-base-mainnet/1.1.1-test",
    "deploy:base-sepolia": "pnpm clean && pnpm prepare:base-sepolia && pnpm codegen && graph build && goldsky subgraph deploy gnars-base-sepolia/1.1.1-test",
    "create:local": "graph create --node http://localhost:8020/ gnars-base",
    "remove:local": "graph remove --node http://localhost:8020/ gnars-base",
    "deploy:local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 gnars-base"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "0.85.0",
    "@graphprotocol/graph-ts": "0.35.1",
    "as-base64": "^0.2.0",
    "node": "^22.6.0"
  },
  "devDependencies": {
    "@tenderly/hardhat-tenderly": "^2.3.0",
    "@types/node": "^22.7.4",
    "dotenv": "^16.4.5",
    "ethers": "^6.13.3",
    "hardhat": "^2.22.12",
    "matchstick-as": "0.5.0",
    "mustache": "^4.2.0",
    "typescript": "^5.6.2"
  }
}